#!/bin/sh
# Pre-commit hook for tinysecrets
# Runs the same checks as CI to catch issues early

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "  â†’ cargo fmt"
if ! cargo fmt --all -- --check 2>/dev/null; then
    echo ""
    echo "âŒ Formatting issues found. Run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy
echo "  â†’ cargo clippy"
if ! cargo clippy -- -D warnings 2>/dev/null; then
    echo ""
    echo "âŒ Clippy warnings found. Fix them before committing."
    exit 1
fi

echo "âœ… All checks passed!"
